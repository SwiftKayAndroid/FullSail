<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="Course Introduction"
        android:id="@+id/tvAssignmentTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:ellipsize="end"
        android:layout_marginLeft="16dp"
        android:textColor="#000000"
        android:layout_toLeftOf="@+id/tvAssignmentStatus"
        android:layout_toStartOf="@+id/tvAssignmentStatus" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="Assignment"
        android:id="@+id/tvAssignmentType"
        android:layout_below="@+id/tvAssignmentTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="A+"
        android:id="@+id/tvAssignmentStatus"
        android:layout_alignTop="@+id/tvAssignmentWeight"
        android:layout_toLeftOf="@+id/tvAssignmentWeight"
        android:layout_toStartOf="@+id/tvAssignmentWeight"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="11\nJan"
        android:id="@+id/tvAssignmentDueDate"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="9\nJan"
        android:id="@+id/tvAssignmentStartDate"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/tvAssignmentDueDate"
        android:layout_toStartOf="@+id/tvAssignmentDueDate"
        android:layout_marginRight="16dp"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="10%\nWeight"
        android:id="@+id/tvAssignmentWeight"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/tvAssignmentStartDate"
        android:layout_toStartOf="@+id/tvAssignmentStartDate"
        android:layout_marginRight="10dp"
        android:gravity="center" />
</RelativeLayout>