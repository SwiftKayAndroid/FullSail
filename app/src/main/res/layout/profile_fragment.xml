<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/full_sail_dark_gray"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/activity_margin"
            android:src="@drawable/profile_pic_blank_150"
            android:id="@+id/profileHeaderProfilePicture" />


        <android.support.v7.widget.CardView
            android:id="@+id/cardViewNewsfeedSettingsDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:id="@+id/profileContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ivProfileEditProfile"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:src="@mipmap/ic_pencil_white_24dp"
                    android:tint="@color/dark_gray" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:padding="15dp"

                    android:textStyle="bold"
                    android:text="About Me"/>

                <EditText
                    android:id="@+id/profileHeaderAboutMe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/activity_margin"
                    android:background="@color/white"
                    tools:text="About Me"
                    android:maxLines="4"
                    android:padding="10dp"
                    android:gravity="top|center_horizontal"
                    android:inputType="textCapSentences" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="left"
                        android:layout_weight="1"
                        android:layout_marginLeft="16dp"
                        android:textStyle="bold"
                        android:text="First Name:"
                        android:layout_marginTop="15dp"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/profileHeaderFirstname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:gravity="right"
                        android:background="@color/white"
                        android:layout_marginRight="16dp"
                        tools:text="Kevin"
                        android:layout_marginTop="15dp"
                        android:inputType="textCapWords" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="left"
                        android:layout_weight="1"
                        android:layout_marginLeft="16dp"
                        android:textStyle="bold"
                        android:text="Middle:"
                        android:layout_marginTop="15dp"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/profileHeaderMiddleName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:gravity="right"
                        android:layout_marginRight="16dp"
                        tools:text="A"
                        android:layout_marginTop="15dp"
                        android:inputType="textCapWords" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="left"
                        android:layout_weight="1"
                        android:layout_marginLeft="16dp"
                        android:textStyle="bold"
                        android:text="Last:"
                        android:layout_marginTop="15dp"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/profileHeaderLastName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:gravity="right"
                        android:layout_marginRight="16dp"
                        android:background="@color/white"
                        tools:text="Haines"
                        android:layout_marginTop="15dp"
                        android:inputType="textCapWords" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_marginLeft="16dp"
                        android:textStyle="bold"
                        android:text="Email Address:"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/profileHeaderEmailAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="right"
                        android:layout_marginRight="16dp"
                        android:background="@color/white"
                        tools:text="khaines178@gmail.com"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="left"
                        android:layout_weight="1"
                        android:layout_marginLeft="16dp"
                        android:textStyle="bold"
                        android:text="Phone Number"
                        android:layout_marginTop="15dp"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/profileHeaderPhoneNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:gravity="right"
                        android:layout_marginRight="16dp"
                        android:background="@color/white"
                        tools:text="3156649266"
                        android:layout_marginTop="15dp" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="left"
                        android:layout_weight="1"
                        android:layout_marginLeft="16dp"
                        android:textStyle="bold"
                        android:text="Address:"
                        android:layout_marginTop="15dp"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/profileHeaderAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:gravity="right"
                        android:layout_marginRight="16dp"
                        tools:text="1651 Croydon st Orlando FL, 32828"
                        android:layout_marginTop="15dp"
                        android:inputType="textCapWords" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>