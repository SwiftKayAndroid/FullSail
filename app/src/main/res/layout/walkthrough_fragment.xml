<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context=".activities.MainActivity$PlaceholderFragment"
    android:background="@drawable/students_reading_book_1"
    android:id="@+id/walkthroughContainer">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/intro_one"
        android:id="@+id/tvWalkthroughMessage"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/full_sail_orange"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"
        android:textSize="21dp" />

</RelativeLayout>
